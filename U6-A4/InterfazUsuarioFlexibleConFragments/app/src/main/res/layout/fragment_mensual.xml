<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MensualFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imagen_card"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/texto_mes"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Octubre 2018"
                app:layout_constraintTop_toBottomOf="@id/imagen_card"
                />
            <Button
                android:id="@+id/btnsem_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sem.1"
                app:layout_constraintTop_toBottomOf="@id/texto_mes"
                />
            <Button
                android:id="@+id/btnsem_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sem.2"
                app:layout_constraintLeft_toRightOf="@id/btnsem_1"
                app:layout_constraintTop_toBottomOf="@id/texto_mes"
                />
            <Button
                android:id="@+id/btnsem_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sem.3"
                app:layout_constraintLeft_toRightOf="@id/btnsem_2"
                app:layout_constraintTop_toBottomOf="@id/texto_mes"
                />
            <Button
                android:id="@+id/btnsem_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sem.4"
                app:layout_constraintLeft_toRightOf="@id/btnsem_3"
                app:layout_constraintTop_toBottomOf="@id/texto_mes"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Fragment Mensual" />

</FrameLayout>